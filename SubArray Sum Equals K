import java.util.*;
public class SubarraySumEqualsK {
    public static int findallSubarray(int arr[],int k){
        int n=arr.length;
        int cnt=0;


        for(int i=0;i<n;i++){
            int sum =0;
            for(int j=i;j<n;j++){
                sum+=arr[j];
                
                if(sum==k)
                    cnt++;
            }
        }
        return cnt;
    }
    public static void main(String[]args){
        int []arr={3,1,2,4};
        int k=6;
        int cnt= findallSubarray(arr,k);
        System.out.println("The number of Subarray is "+ cnt);
    }
}
